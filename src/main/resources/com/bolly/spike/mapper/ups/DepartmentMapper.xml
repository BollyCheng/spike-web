<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bolly.spike.mapper.ups.DepartmentMapper">

    <resultMap id="departmentMap" type="department" autoMapping="false">
        <id column="f_id" property="id" />
        <result column="f_name" property="name" />
    </resultMap>

    <select id="loadById" resultMap="departmentMap" parameterType="java.lang.Long">
        SELECT *
        FROM t_department
        WHERE f_id=#{id}
    </select>

    <select id="list" resultMap="departmentMap">
        SELECT *
        FROM t_department
    </select>

</mapper>